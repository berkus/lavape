#!/usr/bin/env bash
#
echo SHELL=$SHELL
LAVADIST=$(pwd)/$(dirname $0)
LAVADIR=$LAVADIST/lavadir

# Create shell procedures for launching LavaPE / Lava:

rm -f lavape lava

echo "#!$SHELL">$LAVADIST/lavape
echo "export LAVADIR=$LAVADIR">>$LAVADIST/lavape
echo "export LD_LIBRARY_PATH=$LAVADIR/lib:/usr/lib:/lib">>$LAVADIST/lavape
echo "cd $LAVADIR/bin">>$LAVADIST/lavape
echo "if [ -x $(which chcon) ]; then chcon -t texrel_shlib_t ../lib/*.so 2>>/dev/null; fi">>$LAVADIST/lavape
echo "./LavaPE">>$LAVADIST/lavape
chmod a+x lavape

echo "export LAVADIR=$LAVADIR">>$LAVADIST/lava
echo "export LD_LIBRARY_PATH=$LAVADIR/lib:/usr/lib:/lib">>$LAVADIST/lava
echo "cd $LAVADIR/bin">>$LAVADIST/lava
echo "if [ -x $(which chcon) ]; then chcon -t texrel_shlib_t ../lib/*.so 2>>/dev/null; fi">>$LAVADIST/lava
echo "./Lava">>$LAVADIST/lava
chmod a+x lava
