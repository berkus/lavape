#!/bin/sh
#
rm -f lavape lava
LAVADIR=`pwd`

echo "#!/bin/bash">$LAVADIR/lavape
echo "export LAVADIR=$LAVADIR">>$LAVADIR/lavape
echo "export LD_LIBRARY_PATH=$LAVADIR/lib:/usr/lib:/lib">>$LAVADIR/lavape
echo "cd $LAVADIR/bin">>$LAVADIR/lavape
echo "if [ -x $(which chcon) ]; then chcon -t texrel_shlib_t ../lib/*.so 2>>/dev/null; fi">>$LAVADIR/lavape
echo "./LavaPE">>$LAVADIR/lavape
chmod a+x lavape

echo "export LAVADIR=$LAVADIR">>$LAVADIR/lava
echo "export LD_LIBRARY_PATH=$LAVADIR/lib:/usr/lib:/lib">>$LAVADIR/lava
echo "cd $LAVADIR/bin">>$LAVADIR/lava
echo "if [ -x $(which chcon) ]; then chcon -t texrel_shlib_t ../lib/*.so 2>>/dev/null; fi">>$LAVADIR/lava
echo "./Lava">>$LAVADIR/lava
chmod a+x lava
